= simple_form_for(@tag, :html => { :class => "form-horizontal", :id => "inline-validate" }, :wrapper => "horizontal", defaults: { :input_html => { class: "form-control"}, label_html: { class: "col-lg-4" } } ) do |f|
  = f.error_notification
  .form-inputs
    = f.input :name
    =simple_form_image_paperclip(f, :thumbnail_image)
    = f.input :featured, label: "Featured tag"
    = f.association :venue, collection: get_venues, :input_html => {class: "chosen" }
    
  .form-actions
    = f.button :submit, :class => "btn btn-primary"
  .blankArea{style:"height: 200px"}
    &nbsp;
