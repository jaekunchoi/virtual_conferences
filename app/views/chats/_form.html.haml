= simple_form_for(@chat, :html => { :class => "form-horizontal" }, :wrapper => "horizontal", defaults: { :input_html => { class: "form-control"}, label_html: { class: "col-lg-4" } } ) do |f|
	= f.error_notification

	.form-inputs
		= f.association :from_user, prompt: 'Select a user'
		= f.association :to_user, prompt: 'All users'
		= f.input :message
		= f.input :chattable_type, collection: ["Booth", "Venue"], prompt: 'Select a location type', label: 'Location Type'
		= f.input :chattable_id, collection: Booth.all, prompt: 'Select a booth', label: 'Booth'
		= f.input :chattable_id, collection: Hall.all, prompt: 'Select a hall', label: 'Hall'

	.form-actions
		= f.button :submit, class: 'btn btn-primary'
