= simple_form_for(@moderated_chat, :html => { :class => "form-horizontal" }, :wrapper => "horizontal", defaults: { :input_html => { class: "form-control"}, label_html: { class: "col-lg-4" } } ) do |f|
  = f.error_notification

  .form-inputs
    = f.input :message
    = f.association :webcast
    = f.association :from_user
    = f.association :to_user
    = f.input :approved


  .form-actions
    = f.button :submit, class: 'btn btn-primary'
