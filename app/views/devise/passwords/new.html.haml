.container
	%h2.page-header
		Reset your password
	.tab-content
		.tab-pane.active{:id => "forgot"}
			= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-signin' }) do |f| 
				= f.error_notification
				= f.input :email, :required => true, :autofocus => true, input_html: { class: "form-control", value: params[:code]}, :placeholder => "Email"
				= f.button :submit, "Send me reset password link", :class => "btn btn-lg btn-primary btn-block"
		= render "devise/shared/links"
