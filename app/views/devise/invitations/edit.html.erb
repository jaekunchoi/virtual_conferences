<div class="container">
	<h2><%= t 'devise.invitations.edit.header' %></h2>
	<div class="tab-content">
    	<div class="tab-pane active" id="invitable">
			<%= simple_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put, :class => "form-signin" } do |f| %>
			  <%= devise_error_messages! %>
			  <%= f.hidden_field :invitation_token %>
			  	<div class="form-inputs">
			  		<%= f.input :first_name,:input_html => { class: "form-control"} %>
			  		<%= f.input :last_name,:input_html => { class: "form-control"} %>
				  	<%= f.input :password,:input_html => { class: "form-control"} %>
				  	<%= f.input :password_confirmation,:input_html => { class: "form-control"} %>
				</div>
				<div class="form-actions">
			  		<%= f.submit t("devise.invitations.edit.submit_button"), class: "btn btn-lg btn-primary btn-block" %>
				</div>
			<% end %>
		</div>
	</div>
</div>