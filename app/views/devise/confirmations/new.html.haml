.container
	%h2.page-header
		Resend confirmation instructions
	.tab-content
		.tab-pane.active{:id => "forgot"}
			= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :class => 'form-signin' }) do |f|
				= f.error_notification
				= f.full_error :confirmation_token
				= f.input :email, :required => true, :autofocus => true, input_html: { class: "form-control"}, :placeholder => "Email"
				= f.button :submit, "Resend confirmation instructions", :class => "btn btn-lg btn-primary btn-block"
	= render "devise/shared/links"