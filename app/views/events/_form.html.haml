= simple_form_for(@event, :url => @url, :html => { :class => "form-horizontal", :id => "inline-validate" }, :wrapper => "horizontal", defaults: { :input_html => { class: "form-control"}, label_html: { class: "col-lg-4" } } ) do |f|
  = f.error_notification
  .form-inputs
    = f.input :name
    = f.input :start, :as => :string, :input_html => { class: "datetimepicker form-control" }
    = f.input :finish, :as => :string, :input_html => { class: "datetimepicker form-control" }
    = f.input :event_url, :input_html => { class: "url form-control" }
    = f.input :event_reports_url
    = f.association :hall, collection: Venue.find(@event.venue).halls.order(:name), :include_blank => false if @event.venue
    = simple_form_image_paperclip(f, :logo1)
    = simple_form_image_paperclip(f, :logo2)
    = simple_form_image_paperclip(f, :top_bar_background)
    = f.input :colour, :input_html => { "colourpicker" => "true" }
    = f.input :publish_event
    = simple_form_image_paperclip(f, :event_image)
    = f.input :description
    = f.input :search_keywords
    = f.input :closed_event_redirect
    = f.input :comments
    = f.association :venue, :input_html => { value: params[:venue_id], class: "chosen" }
    
  .form-actions
    = f.button :submit, class: "btn btn-primary"
