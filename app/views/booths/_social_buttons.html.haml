- if(@booth.facebook_url.size > 1 || @booth.twitter_url.size > 1 || @booth.linkedin_url.size > 1)
  .social-container
    .row
      .col-md-2.col-md-offset-1
        %h4 Visit us
        %ul.list-inline.social-buttons
          %li= link_to(image_tag(asset_url("fb.jpg")), @booth.facebook_url, :target => "_blank") if @booth.facebook_url?
          %li= link_to(image_tag(asset_url("twitter.jpg")), @booth.twitter_url, :target => "_blank") if @booth.twitter_url?
          %li= link_to(image_tag(asset_url("linkedin.jpg")), @booth.linkedin_url, :target => "_blank") if @booth.linkedin_url?
      .col-md-9