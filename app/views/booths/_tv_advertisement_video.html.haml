#tv-advertisement-video.video-container{:style => "display:none;"}
  #video-carousel.carousel.slide.article-slide{"data-ride" => "carousel", "data-interval" => "false"}
    .slider-container
      / Wrapper for slides
      .carousel-inner.cont-slider
        - @visualContent.each_with_index do |content, index|
          .item{ :class => "#{index == 0 ? 'active' : '' }" }
            =render partial: "contents/display_content", locals: {content: content, width: width, height: height}

      / Controls
      %a.left.carousel-control{"data-slide" => "prev", href: "#video-carousel"}
        %span.glyphicon.glyphicon-chevron-left
      %a.right.carousel-control{"data-slide" => "next", href: "#video-carousel"}
        %span.glyphicon.glyphicon-chevron-right
          
    / Indicators
    %ol.carousel-indicators
      - @visualContent.each_with_index do |content, index|
        %li{ :class => "#{index == 0 ? 'active' : '' }", "data-slide-to" => index, "data-target" => "#video-carousel" }
          =render partial: "contents/thumbnail_content", locals: {content: content, width: 47, height: 35}
            
    %ul.list-unstyled.pull-right.power-off
      %li
        #power-off.btn-group
          =link_to fa_icon("power-off"), "javascript:;", :method=>'delete', :data => {:toggle => "tooltip", "original-title" => "Close", :placement => "bottom"}, :class => "btn btn-metis-1 btn-sm", :style => "margin-top: 15px;"
